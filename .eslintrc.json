{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaVersion": 2020,
        "ecmaFeatures": {
          "jsx": true
        }
      },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:react/jsx-runtime"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "object-curly-spacing": [
            "error", "always"
        ],
        "arrow-spacing": [
            "error", { "before": true, "after": true }
        ],
        "eqeqeq": ["error", "always"],
        "no-fallthrough": "error",
        "no-trailing-spaces": "error",
        "no-debugger": 0,
        "no-console": 0,
        "no-unused-vars": 0,
        "no-undef": 0,        
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
